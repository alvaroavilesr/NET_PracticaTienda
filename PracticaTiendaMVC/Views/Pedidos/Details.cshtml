@model PracticaTienda.Models.ModeloPedidos

@{
    ViewBag.Title = "Detalles del pedido";
}

<br />
<h2>
    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-info-square-fill" viewBox="0 0 16 16">
        <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm8.93 4.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM8 5.5a1 1 0 1 0 0-2 1 1 0 0 0 0 2" />
    </svg>
    <strong>Detalles del pedido</strong>
</h2>
<br />

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecioTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecioTotal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario)
        </dd>
    </dl>
</div>

<hr />
<h4>
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5" />
    </svg>
    <strong>Productos Asociados</strong>
</h4>
@if (Model.PedidoProductos != null && Model.PedidoProductos.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PedidoProductos.First().Productos.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PedidoProductos.First().Cantidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PedidoProductos.First().Subtotal)
                </th>
                <th> 
                    @Html.DisplayNameFor(model => model.PedidoProductos.First().Productos.ImagenAsociada) 
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model.PedidoProductos)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => producto.Productos.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => producto.Cantidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => producto.Subtotal)
                    </td>
                    <td>
                        <img src="@Url.Content("~/Images/" + producto.Productos.ImagenAsociada)" alt="Imagen del producto" class="img-fluid fixed-size" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products available.</p>
}

<p>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</p>

<style>
    .fixed-size {
        width: 200px;
        height: 200px;
        object-fit: contain;
    }
</style>